{
  "name": "@ping-board/backend",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "build": "yarn tsc --build",
    "clean": "yarn tsc --build --clean",
    "start": "NODE_ENV=production yarn node --enable-source-maps ./build/index.js",
    "dev": "NODE_ENV=development yarn ts-node-dev --inspect --files ./src/index.ts",
    "lint": "yarn workspace @ping-board/common build && yarn run eslint .",
    "lint:fix": "yarn lint --fix",
    "migrate:latest": "knex migrate:latest",
    "migrate:up": "knex migrate:up",
    "migrate:down": "knex migrate:down",
    "seed": "knex seed:run"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "@ping-board/common": "workspace:packages/common",
    "@slack/web-api": "^6.9.0",
    "client-oauth2": "^4.3.3",
    "cockatiel": "^3.1.1",
    "dayjs": "^1.11.9",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.5.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "mysql2": "^3.6.0",
    "node-fetch": "^2.7.0",
    "yup": "^1.2.0"
  },
  "devDependencies": {
    "@types/http-errors": "^2.0.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/koa": "^2.13.8",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^20.5.9",
    "@types/node-fetch": "^2.6.4",
    "@types/yup": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18"
  }
}
